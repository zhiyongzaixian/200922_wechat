/* pages/recommendSong/recommendSong.wxss */

.header  {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.header image {
  width: 100%;
  height: 100%;
}

.date {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -150rpx;
  margin-top: -40rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

/* 内容区 */
.recommendList {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  background: #fff;
}
.recommendHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.changeAll {
  float: right;
}

.listScroll {
  height: calc(100vh - 380rpx);
}
.recommendItem {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}

.recommendItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.recommendItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.musicInfo text {
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.iconfont {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  right: 0;
  text-align: right;
  line-height: 80rpx;
}