/* pages/songDetail/songDetail.wxss */

.songDetailCotainer {
  height: 100%;
  background: rgba(0,0,0, .5);
  display: flex;
  align-items: center;
  flex-direction: column;
}
.circle {
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background:#fff;
  margin: 10rpx 0;
}

/* 摇杆 */
.needle {
  position: relative;
  z-index: 99;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s linear;
}


.needleAnimate {
  transform: rotate(0deg);
}

/* 磁盘 */
.discContainer {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}

/* 磁盘动画 */
.discAnimate {
  animation: disc 4s linear infinite;
  animation-delay: 1s;
}

/* 
设置动画帧数
  from to:
    1. 用于简单动画，
    2. 该动画只有起始帧和结束帧
    3. 北京-上海
  百分比: 
    1. 适用于复杂动画
    2. 帧数可以从0%-100%随意拆分
    3. 北京 - 西安 - 深圳 - 上海
*/
@keyframes disc {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
.discContainer .disc {
  width: 100%;
  height: 100%;
}

.discContainer .musicImg {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}