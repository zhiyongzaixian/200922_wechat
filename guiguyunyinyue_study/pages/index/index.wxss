/* pages/index/index.wxss */

.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 图标导航区域 */
.navContainer {
  display: flex;
}

.navItem {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navItem  .iconfont {
  width: 100rpx;
  height: 100rpx; 
  border-radius: 50rpx;
  font-size: 50rpx;
  background: #d43c33;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer  {
  padding: 20rpx;
}



/* 推荐歌曲内容区  */
.recommendScroll {
  display: flex;
  height: 300rpx;
}

.recommendItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.recommendItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recommendItem  text {
  display: block;
  font-size: 26rpx;
  /* 单行文本溢出 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}


/* 排行榜区域 */
.topList {
  padding: 20rpx;
}

.topListSwiper {
  height: 400rpx;
}
.swiperItem .title {
  line-height: 70rpx;
  height: 70rpx;
}

.musicInfo {
  height: 100rpx;
  /* 当设置display: flex以后会自动将其子元素变成block */
  display: flex;
  margin-bottom: 20rpx;
}

.musicInfo image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.musicInfo  .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicInfo  .musicName {
  line-height: 100rpx;
}