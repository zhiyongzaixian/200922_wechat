<view class="indexContainer">
  <!-- 主页轮播区域banner -->
  <swiper class="banners" indicator-dots  indicator-color='ivory' indicator-active-color='#d43c33' circular>
    <swiper-item wx:for="{{bannersList}}" wx:key='bannerId'>
      <image src="{{item.pic}}"></image>
    </swiper-item>
  </swiper>


  <!-- 5个图标导航区域 -->
  <view class="navContainer">
    <view class="navItem">
      <text class="iconfont icon-meirituijian-"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-gedan1"></text>
      <text>歌单</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-icon-ranking"></text>

      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>

      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-zhibobofangshexiangjitianxianxianxing"></text>

      <text>直播</text>
    </view>
  </view>

  <!-- 推荐歌曲 -->
  <view class="recommendContainer">
    <!-- 头部区域 -->
    <NavHeader title='推荐歌曲' nav='为你精心推荐'></NavHeader>  
    <!-- 内容区 -->
    <scroll-view class="recommendScroll" enable-flex scroll-x>
      <view class="recommendItem" wx:for-item='recommendItem' wx:for="{{recommendList}}" wx:key='id'>
        <image src="{{recommendItem.picUrl}}"></image>
        <text>{{recommendItem.name}}</text>
      </view>
    </scroll-view>
  </view>


  <!-- 排行榜区域 -->
  <view class="topList">
    <!-- 头部区域 -->
    <NavHeader title='排行榜' nav='热歌风向标'></NavHeader>  
    <!-- 内容区 -->
    <swiper class="topListSwiper">
      <swiper-item>
        <view class="swiperItem">
          <view class="title">热歌榜</view>
          <view class="musicInfo">
            <image src="/static/images/nvsheng.jpg"></image>
            <text class="count">1</text>
            <text class="musicName">光辉岁月</text>
          </view>
          <view class="musicInfo">
            <image src="/static/images/nvsheng.jpg"></image>
            <text class="count">2</text>
            <text class="musicName">海阔天空</text>
          </view>
          <view class="musicInfo">
            <image src="/static/images/nvsheng.jpg"></image>
            <text class="count">3</text>
            <text class="musicName"> 真的爱你</text>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>
</view>
