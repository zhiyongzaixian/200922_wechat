/* pages/video/video.wxss */
.header  {
  display: flex;
  padding: 10rpx;
}
.header image {
  width: 60rpx;
  height: 60rpx;
}

.header .search {
  /* 
    flex: flex-grow（可拉伸）: 0; flex-shrink(可压缩): 1; flex-basis: auto(自身宽度);
    flex: 1; flex-grow: 1; flex-shrink: 1; flex-basis: 0%;
    flex: auto; flex-grow: 1; flex-shrink: 1; flex-basis: auto;
    flex: 1; 会导致父元素，伸缩盒模型宽度为100%；
  */
  flex: 1;
  border: 1rpx solid #eee;
  height: 60rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx;
}


/* 导航区域 */

.navContainer {
  display: flex;
  white-space: nowrap;
}

.navItem {
  padding: 0 20rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.navContent.active {
  border-bottom: 1rpx solid #d43c33;
}
