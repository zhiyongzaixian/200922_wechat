/* pages/video/video.wxss */
.header  {
  display: flex;
  padding: 10rpx;
}
.header image {
  width: 60rpx;
  height: 60rpx;
}

.header .search {
  /* 
    flex: flex-grow（可拉伸）: 0; flex-shrink(可压缩): 1; flex-basis: auto(自身宽度);
    flex: 1; flex-grow: 1; flex-shrink: 1; flex-basis: 0%;
    flex: auto; flex-grow: 1; flex-shrink: 1; flex-basis: auto;
    flex: 1; 会导致父元素，伸缩盒模型宽度为100%；
  */
  flex: 1;
  border: 1rpx solid #eee;
  height: 60rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx;
}


/* 导航区域 */

.navContainer {
  display: flex;
  white-space: nowrap;
  height: 62rpx;
}

.navItem {
  padding: 0 20rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.navContent.active {
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid #d43c33;
  box-sizing: border-box;
}

/* 视频列表 */
.videoItem {
  padding: 0 3%;
}

.videoItem video {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}






.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}







