/* pages/index/index.wxss */



.indexContainer {
  display: flex;
  flex-direction: column;
  /* 侧轴居中 */
  align-items: center;  
  background: #f0f;
  height: 100%;
}


.avatarUrl {
  width: 200rpx;
  height: 200rpx;   
  margin: 100rpx;
  border-radius: 100rpx;
}

button {
  width: 200rpx;
  height: 200rpx;   
  margin: 100rpx;
  border-radius: 100rpx;
  text-align: center;
  line-height: 200rpx;
  font-size: 22rpx;
}

.userName {
  font-size: 32rpx;
  margin: 100rpx;
}

.goStudy {
  width: 300rpx;
  height: 80rpx;
  border: 1rpx solid #333;
  text-align: center;
  line-height: 80rpx;
  border-radius: 20rpx;
}